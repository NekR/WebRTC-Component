    "babel-preset-react": "^6.16.0",
    "browserify": "^13.1.0",
    "browserify-derequire": "^0.9.4",
    "http-server": "^0.9.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "signalhub": "4.7.4",
